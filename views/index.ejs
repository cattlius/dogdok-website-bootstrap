<%- include("partials/header.ejs") %>

<!-- Blog Banner -->

<% const headPost = posts[0]; %>

<section class="text-light mx-4 mb-4 text-start">
  <div class="container">
    <div class="index-banner p-4 p-md-5 rounded text-light" style="background-image: url('<%= headPost.post_imglink %>');">
      <div class="col-lg-6 px-0">
        <h1 class="display-4 fst-bold"><%= headPost.post_title %></h1>
        <p class="lead my-3"><%= headPost.post_desc %></p>
        <p class="lead mb-0"><a href="<%= headPost.post_link %>" class="text-light fw-bold">Duyuruya Göz At...</a></p>
      </div>
    </div>
  </div>
</section>

<section class="mb-4 mx-4">
  <div class="container">
    <div class="row">

      <% for (const [indexPost, post] of posts.entries()) { %>
        <% if (indexPost != 0) { %>
          <div class="col-lg-4 col-md-6 col-12 my-3">
            <div class="card text-bg-dark">
              <img src="<%= post.post_imglink %>" height="400" width="350" class="card-img" alt="...">
              <div class="card-img-overlay d-flex flex-column justify-content-end align-items-start p-4">
                <h5 class="card-title"><%= post.post_title %></h5>
                <p class="card-text"><%= post.post_desc %></p>
                <a href="<%= post.post_link %>" class="button-custom bg-gray-custom">Göz At</a>
              </div>
            </div>
          </div>
        <% } %>
      <% } %>

    <!-- EOS -->
    </div>
  </div>
</section>


<!-- All Announcements Button-->

<section class="mx-4 mb-5 pb-4">
  <div class="container">
    <a href="/arsiv">
      <button href="/arsiv" type="button" class="button-lg-custom bg-purple-custom col-12 col-md-auto">
        Tüm Duyurulara Göz At &rarr;
      </button>
    </a>
  </div>
</section>

<%- include("partials/footer.ejs") %>