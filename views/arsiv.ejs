<%- include("partials/header.ejs") %>   
<%- include("partials/page-title.ejs") %>

<!-- Section Body -->
<section class="archives mb-5 mx-4">
  <div class="container px-3 mb-5">  
    <div class="col-lg-8 mb-5 mx-auto">
      <div class="p-3 text-center bg-light" style="border-radius: 35px">
        <h2 class="mb-0 text-light">Duyurular</h2>
      </div>
    </div>

    <iframe class="mb-5 rounded-3" style="width: 100%; height: 50vw" src="https://www.instagram.com/ytu_dogdok/embed/" frameborder="0"></iframe>
    
    <div class="col-lg-8 mb-5 mx-auto">
      <div class="p-3 text-center bg-light" style="border-radius: 35px">
        <h2 class="mb-0 text-light">Galeri</h2>
      </div>
    </div>

    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner rounded-3" style="background-color: black;">
        <% for (const [indexImage, image] of images.entries()) { %>
          <div class="carousel-item <% if (indexImage === 0) { %>active<% } %> text-center">
            <a href="<%= image.image_postlink %>"><img src="<%= image.image_link %>" alt="..."></a>
          </div>
        <% } %>
        <!-- <div class="carousel-item text-center">
          <a href="https://www.flickr.com/photos/199205626@N02/53212275828/in/album-72177720311436862/"><img src="https://live.staticflickr.com/65535/53212275828_3262ab0b05_b.jpg" alt="..."></a>
        </div>
        <div class="carousel-item text-center">
          <a href="https://www.flickr.com/photos/199205626@N02/53211087247/in/album-72177720311436862/"><img src="https://live.staticflickr.com/65535/53211087247_7b3d880cb1_b.jpg" alt="..."></a>
        </div> -->
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev" style="width: 108px;">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next" style="width: 108px;">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
</section>

<%- include("partials/footer.ejs") %>